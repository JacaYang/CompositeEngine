{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate, Build, and Install Composite Engine",
            "dependsOn": [
                "Generate Composite Engine",
                "Build Composite Engine",
                "Install Composite Engine"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Generate Composite Engine",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "Ninja",
                "-DCE_CONFIGURATION=\"Debug\"",
                "-DCMAKE_BUILD_TYPE=\"Debug\"",
                "-DCMAKE_INSTALL_PREFIX=\"${workspaceFolder}/install\"",
                ".."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "Build Composite Engine",
            "type": "shell",
            "command": "ninja",
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "Install Composite Engine",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--target",
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        }
    ]
}